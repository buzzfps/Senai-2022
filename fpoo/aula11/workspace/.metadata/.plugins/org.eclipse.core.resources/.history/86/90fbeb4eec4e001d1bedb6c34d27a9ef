package padrao;

public class Venda {
	String produto;
	int quantidade;
	float preco;
	
	Venda(){}
	
	Venda(String pro, int quant, float prec){
		produto = pro;
		quantidade = quant;
		preco = prec;
	}
	
	float subtotal() {
		return preco*quantidade;
	}
	
	public String toString() {
		return String.format("[%s]\t[%d]\t\t[%.2f]\t\t[%.2f]", produto, quantidade, preco, subtotal());
	}
}
