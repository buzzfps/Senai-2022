package padrao;

public class Pessoa {
	String nome;
	String sobrenome;
	int idade;
	
	Pessoa(){}
	
	Pessoa(String nom, String sobrenom, int id){
	nome = nom;
	sobrenome = sobrenom;
	idade = id;
	}
	
	String faseDaVida() {
		if(idade <= 15)return "CrianÃ§a";
		else if(idade <= 30)return "Jovem";
		else if(idade <= 40)return "Adulto";
		else return "Idoso";
	}
	
	public String toString() {
		return String.format("%s\t%s\t%d\t%s", nome, sobrenome, idade, faseDaVida());
	}
}

